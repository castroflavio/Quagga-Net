hostname {{ item.name }}
password quagga
log file /var/run/quagga/q_{{ item.local_as }}
debug bgp
!
router bgp {{ item.local_as }}
 bgp router-id {{ item.router_id }}
 timers bgp 1 3
 bgp bestpath as-path multipath-relax
{%   for nbr in item.neighbors %}
 neighbor {{ nbr.ip }} remote-as {{ nbr.remote_as }}
 neighbor {{ nbr.ip }} advertisement-interval 1
 neighbor {{ nbr.ip }} timers connect 3
{%   endfor %}
 maximum-paths 64
